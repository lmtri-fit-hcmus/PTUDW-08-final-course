<main>
    <div class="container my-5">
        <a class="top-3 h5 my-5 py-5 text-success text-decoration-none" href="/subcriber/">Home ></a>
        <span class="top-3 h5 text-success text-decoration-none">{{catName}}</span>
        <span class="line"></span>
        <form action="#" class="searchform order-sm-start order-lg-last" style="width: 20%;
            float: right;">
            <div class="form-group d-flex mx-4">
                <input type=" text" class="form-control pl-3" placeholder="Search">
                <button type="guestmit" placeholder="" class="btn-search bg-light border border-1 rounded">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
        <div class="mt-5">
            {{#each listPaperCat}}
            <div class="item p-2">
                <div class="d-flex mb-3">
                    <div>
                        <img src="/images/{{metadata_id.avaPaper}}" alt="website template image"
                            style="width:180px;height:180px;object-fit:cover;">
                    </div>
                    <div class="w-100 d-flex flex-column bg-light px-3" style="height:180px;">
                        <div class="mb-1" style="font-size:13px;">
                            <a class="item-title m-0 p-1" href="#" id="title">{{title}}
                            </a>
                            <div class="item-date">{{publicationDate}}</div>
                            <div class="item-tag my-1">
                                <a class="bg-secondary text-decoration-none text-white rounded-3" href="#">#coffee
                                </a>
                                <a class="bg-secondary text-decoration-none text-white rounded-3" href="#">#chill
                                </a>
                            </div>
                            <a class="item-category text-white text-decoration-none rounded-3" href="#"
                                style="background-color:{{category_id.color}}">
                                {{category_id.name}}
                            </a>
                            <p class="item-demo mt-2">{{metadata_id.abstract}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-lg-12">
            <nav aria-label="Page navigation example" id="pagination">
                {{{createPagination pagination paginationClass="pagination justify-content-center"
                leftText="Previous" rightText="Next"}}}
            </nav>
        </div>


    </div>

