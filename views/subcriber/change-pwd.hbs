<main>
    <form action="/subcriber/change-pwd" method="POST" id="formChangePwd">
        <div class="container my-4">
            <div class="row">
                <div class="profile-left col-3">
                    <nav class="navbar">
                        <ul class="nav navbar-nav">
                            <li class="nav-item text-muted">
                                {{#if avatar}}
                                <img class="avatar-img" src="/images/{{avatar}}" alt="/images/{{avatar}}">
                                {{else}}
                                <img class="avatar-img" src="/images/avatar.png" alt="/images/avatar.png">
                                {{/if}}
                                <div class="time-remaining">Time remanining</div>
                            </li>
                            <li class="nav-item-info">
                                <a href="/subcriber/profile" class="nav-link left-item" id="profile-item"
                                    style="font-size: 18px; font-weight: 600; "> Profile </a>
                            </li>
                            <li class="nav-item-info">
                                <a href="/subcriber/change-pwd" class="nav-link left-item" id="change-pwd-item"
                                    style="font-size: 18px; font-weight: 600; color:#357C4D;"> Change Password
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <input type="hidden" name="user_id" value="{{id}}">
                <div class="profile-right change-pwd col-8 bg-light" id="change-pwd">
                    <div class="right-title fs-4 m-3 mb-4 d-flex justify-content-between">
                        <div clas="right-title-text">Change Password
                        </div>
                    </div>
                    {{#if changePwdMessage}}
                    <div class="col md-12">
                        <div class="p-3 mt-3 alert alert-warning">
                            {{changePwdMessage}}
                        </div>
                    </div>
                    {{/if}}
                    <div class="right-item d-flex align-items-center mx-5 my-4">
                        <div class="w-25 text-end px-3 py-2">Current Password
                        </div>
                        <input class="input w-50 border border-secondary rounded-3 p-2 text-dark" type="password"
                            placeholder="" id="cur-pwd" name="currentPwd" required>
                    </div>
                    <div class="right-item d-flex align-items-center mx-5 my-4">
                        <div class="w-25 text-end px-3 py-2">New Password
                        </div>
                        <input class="input w-50 border border-secondary rounded-3 p-2 text-dark" type="password"
                            placeholder="" id="new-pwd" name="newPwd" required
                            onchange="checkPasswordConfirm('formChangePwd')">
                    </div>
                    <div class="right-item d-flex align-items-center mx-5 my-4">
                        <div class="w-25 text-end px-3 py-2">Confirm Password</div>
                        <input class="input w-50 border border-secondary rounded-3 p-2 text-dark" type="password"
                            placeholder="" id="confirm-pwd" name="confirmPwd" required placeholder=""
                            onkeyup="checkPasswordConfirm('formChangePwd')">
                    </div>
                    <div class="right-item d-flex align-items-center mx-5 my-4">
                        <div class="w-25 text-end px-3 py-2">
                        </div>
                        <button class="btn-save w-10 border bg-success text-white rounded-3 px-3 py-1" type="submit"
                            id="confirm-btn">
                            Confirm
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</main>