<div class="modal fade" id="user-detail-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <div class="grid-container">
              <div class="cell" style="border-top-left-radius: 10px;"><label for="name">Name:</label></div>
              <div class="cell" style="border-top-right-radius: 10px;"><input type="text" class="form-control"
                  id="cat-name" name="cat-name"></div>
              <div class="cell"><label for="color-picker">Choose a color:</label></div>
              <div class="cell"><input style="width: 100%;" type="color" id="cat-color" name="color-picker"></div>
              <div class="cell" style="border-bottom-left-radius: 10px;"><label for="message">Detail:</label></div>
              <div class="cell" style="border-bottom-right-radius: 10px;"><textarea class="form-control" id="cat-detail"
                  rows="3"></textarea></div>
            </div>
          </div>
          <br>
          <h5 class="modal-title">Demo</h5>
          <div id="category-demo-field" class="d-inline-flex justify-content-center align-items-center">

          </div>
          <div class="modal-footer justify-content-center">
            <button style="background-color: #9C4444; color: white;" class="btn">Delete</button>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
